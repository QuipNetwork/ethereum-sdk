{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "typechain-types/*"]
    },
    "types": ["node", "hardhat", "mocha", "chai"]
  },
  "include": [
    "src/**/*",
    "typechain-types/**/*",
    "scripts/**/*",
    "test/**/*",
    "scripts/**/*",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
